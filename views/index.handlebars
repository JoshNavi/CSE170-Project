<!doctype html>

<html>
<head>
	<title>GO!outide</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="theme-color" content="#4CAF50">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/gooutside.css" rel="stylesheet">
	<link href="/css/splash.css" rel="stylesheet">
	<link href="/css/login.css" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,600italic,300' rel='stylesheet' type='text/css'>
</head>

<body>
	<div class="splash">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->

		<div class="form">

      <ul class="tab-group">
        <li class="tab active"><a href="#login">Log In</a></li>
        <li class="tab"><a href="#signup">Sign Up</a></li>
      </ul>

      <div class="tab-content">

        <div id="login">
          <h1>GO!outside</h1>

          <form action="/homepage" method="get">

            <div class="field-wrap">
            <label class="active">
              Email<span class="req">*</span>
            </label>
            <input id="usr" type="email"required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label class="active">
              Password<span class="req">*</span>
            </label>
            <input id="pw" type="password"required autocomplete="off"/>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>

					<a href="/homepage">
	          <button class="button button-block"/>Log In</button>
					</a>

          </form>

        </div>

        <div id="signup">
          <h1>Sign Up for Free</h1>

          <form action="/homepage" method="get">

          <div class="top-row">
            <div class="field-wrap">
							<label class="active">
                First Name<span class="req">*</span>
              </label>
              <input type="text" required autocomplete="off" />
            </div>

            <div class="field-wrap">
							<label class="active">
                Last Name<span class="req">*</span>
              </label>
              <input type="text"required autocomplete="off"/>
            </div>
          </div>

          <div class="field-wrap">
						<label class="active">
              Email Address<span class="req">*</span>
            </label>
            <input type="email"required autocomplete="off"/>
          </div>

          <div class="field-wrap">
						<label class="active">
              Set A Password<span class="req">*</span>
            </label>
            <input type="password"required autocomplete="off"/>
          </div>

          <button type="submit" class="button button-block"/>Get Started</button>

          </form>

        </div>


      </div><!-- tab-content -->

		</div> <!-- /form -->


	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<script src="/js/login.js"></script>

</body>
</html>
